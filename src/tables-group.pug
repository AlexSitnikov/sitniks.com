							button.btn.btn-primary.change-name__btn-show(data-toggle="tooltip", data-placement="top", title="Редактировать название")
								i.icon-pencil
							button.btn.btn-primary(data-toggle="tooltip", data-placement="top", title="Удалить группу")
								i.icon-bin
				.change-name__edit.hide
					.input-group
						input.form-control(type='text', placeholder='Название группы')
						.input-group-append
							button.btn.btn-primary(data-toggle="tooltip", data-placement="top", title="Сохранить")
								i.icon-check
