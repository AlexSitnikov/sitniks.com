							button.btn.btn-primary(data-toggle="tooltip", data-placement="top", title="Удалить схему")
								i.icon-bin
				.form-group.has-success
					.input-group
						input.form-control(type='text', placeholder='Строка')
						.input-group-append.align-items-center.pl-3.pr-3
							label.checkbox.mb-0(data-toggle="tooltip", data-placement="top", title="Отоброжать в поиске")
								input.checkbox__input(type='checkbox', checked='')
								span.checkbox__rules
									span.checkbox__main
					span.form-text success
				.form-group.has-error
