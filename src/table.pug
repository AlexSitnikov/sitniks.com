extends ./layout/index.pug

block content
	h2.mb-3.text-center Название таблици
	ol.breadcrumb.mb-3
		li.breadcrumb-item
			a(href='index.html') Главная
		li.breadcrumb-item.active(aria-current='page') Название таблици
	
	.btn-group.mb-3
		a.btn.btn-primary(href='add-note.html', data-toggle="tooltip", data-placement="top", title="Создать запись")
			i.icon-plus
		button.btn.btn-primary(data-toggle="tooltip", data-placement="top", title="Экспорт таблицы")
			i.icon-download3
		button.btn.btn-primary.advanced-search__btn-open(data-toggle="tooltip", data-placement="top", title="Расширенный поиск")
			i.icon-search
	.advanced-search.container
		.row.mb-3.justify-content-lg-center
			.col-sm-12.col-lg-6
				.form-group
					.input-group
						select.form-control.selectpicker(data-live-search="true", title="Выбирите схему")
